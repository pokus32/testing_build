            DimHeader:
            SView:
                GridLayout:
                    id: rows_layout
                    cols: 1
                    spacing: "1dp"
                    size_hint_y: None
                    height: self.minimum_height


<SView@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    ##dodavleni canvas chtob scroll view ne vihodil za verhnuiu granicu roditelya!!!!!!!!!!!!!!!!
    canvas.before:
        StencilPush
        Rectangle:
            pos: self.pos
            size: self.size
        StencilUse

    canvas.after:
        StencilUnUse
        Rectangle:
            pos: self.pos
            size: self.size
        StencilPop


<ColHeader>:
    size_hint_x: None
    width: "102dp"
    text: '---'
    n_b_color: [0.90,0.89,0.82,1]
    canvas:
        Color:
            rgba: self.n_b_color
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: measure_instr
        text_size : self.size
        halign : "center"
        valign : "middle"
        color: 0,0,0,1
        text : root.text